{# template for returning list of gear items as json object #}
{% load template_filters %}

{% autoescape off %}
{ "items": [
    {% for item in items %}{
            "id": "{{ item.id }}",
            "owner": "{{ item.owner }}",
            "holder": "{{ item.holder }}",
            "make": "{{ item.make }}",
            "model": "{{ item.model }}",
            "description": "{{ item.description }}",
            "weight": "{{ item|gear_item_weight:user|floatformat:'-1' }}",
            "status": "{{ item.get_status_display }}"
        }{% if not forloop.last %} , {% endif %}
    {% endfor %}]
}
{% endautoescape %}
